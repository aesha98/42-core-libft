#include "libft.h"

static int	get_len(int n)
{
	int	i;
	int	remainder;

	i = 0;
	remainder = 10;
	if (n == 0)
		return (1);
	while (n != 0)
	{
		n = n / remainder;
		i++;
	}
	return (i);
}

int	absolute_val(int n)
{
	if (n < 0)
		return (-n);
	return (n);
}

char	*ft_itoa(int n)
{
	char	*str;
	char	*base_ten;
	int		len;

	base_ten = "0123456789";
	len = get_len(n);
	str = (char *)malloc(len + 1);
	if (!str)
		return (0);
	str[len] = 0;
	if (n < 0)
		str[0] = '-';
	else if (n == 0)
		str[0] = '0';
	while (len && n)
	{

		str[len--] = base_ten[absolute_val(n) % 10];
		n = n / 10;
	}
	return (str);
}
